reset()
base-classes()
border-box()

// settings
font = unquote('Helvetica Neue, Helvetica, Arial, sans-serif')

body
	font-family font
	-webkit-font-smoothing antialiased

.cover
	padding 100px 10px
	color #fff
	text-align center
	background-color #424242
	background-image url('http://static.tumblr.com/5769723044626a13c7a492d55485bc5a/3zmswwt/ARKmyechb/tumblr_static_layer_3_copy.jpg')
	background-repeat no-repeat
	background-size cover
	color #ffffff

// google browser
.g-page
	background #fff
	size: 650px 430px
	margin 100px auto
	text-align center
	box-shadow inset 0px 0px 1px 0px #999
	position relative
	border-radius 0 0 3px 3px
	cursor default
	&:before
		block()
		background #111
		content ''
		relative top -26px
		height 26px
		border-radius: 3px 3px 0 0
	.g-ctrl
		background rgba(255,255,255,0.2)
		absolute top -17px
		size 8px
		border-radius 100%
		&.one
			left 9px
		&.two
			left 22px
		&.three
			left 35px
	.g-logo
		width 150px
		margin 75px auto 15px
		opacity .9
	.g-input
		inline-block()
		border 1px solid #ddd
		color #222
		font-size 12px
		padding 7px 10px
		size 65% 30px
		margin-left 14%
		outline none
		cursor default
		text-align left
		border-radius 2px
		transition all 1s ease
		.g-cursor
			border-right 0
	.g-button
		inline-block()
		size 40px 30px
		outline none
		background #4285f4
		background linear-gradient(top, #4387fd, #4683ea)
		margin-left -5px
		user-select none
		border-radius 0 2px 2px 0
		.g-search-icon
			block()
			background-image url('/img/search.png')
			background-size cover
			margin 0 auto
			size 15px
	&.typing
		.g-input
			border-color #4285f4
		.g-cursor
			padding-right 1px
			border-right 1px solid
			animation blink-caret .5s step-end infinite alternate
	&.highlight
		.g-button
			border 1px solid transparent
			box-shadow inset 0 2px 0 rgba(0, 0, 0, .15)
			background #3c78dc
			background linear-gradient(top, #3c7ae4, #3f76d3)
	&.relayout
		.g-logo
			margin -14px 0 0 -550px
			width 80px
		.g-box
			margin -32px 0 0 5px
		.ls-results
			block()
	.g-results
		width 60%
		float left
		text-align left
		margin 15px 0 0 15px
		overflow hidden
	.ls-results
		display none
		width 35%
		float right
		text-align left
		margin 30px 16px 0 0
		padding 6px 15px
		box-shadow rgba(0, 0, 0, 0.2) 0px 1px 4px
	.g-results, .ls-results
		.g-item
			margin 0 0 10px
			font-size 12px
			h3
				color #1A52A5
				font-size 14px
				font-weight bold
				margin 0 0 1px
			.g-item-link
				color #006621
				margin 0 0 3px
				text-overflow 100%
			.g-item-desc
				color #333
	.ls-results
		h3
			font-size 13px !important
			line-height 15px
			margin-bottom 3px !important

@keyframes blink-caret
	50%
		border-color transparent

